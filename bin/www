#!/usr/bin/env node

'use strict';

/**
 * Module dependencies.
 */
const app = require('../app');

const DEFAULT_PORT = 8080;

const start = async () => {
  const port = process.env.PORT || DEFAULT_PORT;
  try {
    await app.listen(port);
    app.log.info(`server listening on ${app.server.address().port}`);
  } catch (err) {
    app.log.error(err);
    process.exit(1);
  }
};

start();
